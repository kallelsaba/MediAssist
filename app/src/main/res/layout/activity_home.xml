<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_doctor"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="20dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:padding="8dp">

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_bg"
                android:drawableTop="@drawable/profile"
                android:drawableTint="@color/white"
                android:elevation="8dp"
                android:text="Profile"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnMedications"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_bg"
                android:drawableTop="@drawable/medications"
                android:drawableTint="@color/white"
                android:elevation="8dp"
                android:text="Medications"
                android:textSize="18sp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnEmergency"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_bg"
                android:drawableTop="@drawable/emergencyhome"
                android:drawableTint="@color/white"
                android:elevation="8dp"
                android:text="Emergency"
                android:textSize="18sp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnAppointments"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_bg"
                android:drawableTop="@drawable/appointments"
                android:drawableTint="@color/white"
                android:elevation="8dp"
                android:text="Appointments"
                android:textSize="18sp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnPrescriptions"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_bg"
                android:drawableTop="@drawable/prescriptions"
                android:drawableTint="@color/white"
                android:elevation="8dp"
                android:text="Prescriptions"
                android:textSize="18sp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_bg"
                android:drawableTop="@drawable/schedule"
                android:drawableTint="@color/white"
                android:elevation="8dp"
                android:text="Schedule"
                android:textSize="18sp"
                android:textColor="@color/white" />

        </GridLayout>
    </LinearLayout>
</ScrollView>

